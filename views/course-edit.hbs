<h1>Edit course: {{course.title}}</h1>

<form action="/courses/edit" method="POST" class="c">
    <div class="input-field">
      <input placeholder="Course Name" name="title" id="title" type="text" class="validate" required value="{{course.title}}">
      <label for="title">Course Name</label>
      <span class="helper-text" data-error="Enter Name"></span>
    </div>

    <div class="input-field">
      <input placeholder="Price" id="price" name="price" type="number" class="validate"  required value="{{course.price}}">
      <label for="price">Course Name</label>
      <span class="helper-text" data-error="Enter price"></span>
    </div>

    <div class="input-field">
      <input placeholder="Preview" id="preview" name="img" type="text" class="validate"  required value="{{course.img}}">
      <label for="preview">URL image</label>
      <span class="helper-text" data-error="Choose File"></span>
    </div>

    <input type="hidden" name="id" value="{{courses.id}}"/>

    <button type="submit" class="btn btn-primary">Edit Course</button>
</form>

<form action="/courses/remove" method="POST">
  <input type="hidden" name="id" value="{{course.id}}">
 <button class="btn red">Remove course</button>
</form>