include  partials/head

html
  head
    title= title
  body
    h1= message

    include partials/navbar
    .container

      h1 Add Course
      if error
        p.alert= error
      form(action="/add" method="POST" novalidate)
        .input-field
          input(placeholder="Course Name" name="name" id="title" type="text" class="validate" required value=data.title)
          label(for="title") Course Name
          span(class="helper-text" data-error="Enter Name")
        .input-field
          input(placeholder="Price" id="price" name="price" type="number" class="validate"  required value=data.price)
          label(for="price") Course Name
          span(class="helper-text" data-error="Enter price")

        .input-field
          input(placeholder="Preview" id="preview" name="preview" type="text" class="validate"  required value=data.img)
          label(for="preview") URL image
          span(class="helper-text" data-error="Choose File")
        input(type="hidden" name="_csrf" value=csrf)

        button(class="btn btn-primary") Add Course


    include partials/footer